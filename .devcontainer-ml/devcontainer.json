{
    "name": "ML Dev Container",
    "dockerFile": "Dockerfile",
    "context": "..",
    "features": {
        "docker-in-docker": "latest"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind"
    ]
}
